<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"             
             xmlns:viewmodel="clr-namespace:MyProject.ViewModel"
             xmlns:model="clr-namespace:MyProject.Model"
             x:Class="MyProject.View.NewPage">




    <ScrollView>
        <CollectionView ItemsSource="{Binding myObservableTitans}"
                       SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Titan">
                    <Border StrokeThickness="4"
                            StrokeShape="RoundRectangle 10,10,10,10">
                        <HorizontalStackLayout>
                            <Image Source="{Binding Picture}"
                                   HeightRequest="100"
                                   Aspect="AspectFill"/>
                            <VerticalStackLayout>
                                <Label  Text="{Binding Path=Name,StringFormat='Name: {0:S2}'}" 
                                       Style="{StaticResource SubHeadline}"
                                       FontSize="15"
                                       HorizontalOptions="Start"
                                       VerticalOptions="Center"/>
                                
                                <Label Text="{Binding Path=Height,StringFormat='Height: {0:S2}'}" 
                                       Style="{StaticResource SubHeadline}"
                                       FontSize="15"
                                       HorizontalOptions="Start"
                                       VerticalOptions="Center"/>
                                
                                <Label Text="{Binding Path=Abilities,StringFormat='Abilities: {0:S2}'}" 
                                       Style="{StaticResource SubHeadline}"
                                       FontSize="15"
                                       HorizontalOptions="Start"
                                       VerticalOptions="Center"/>

                                <Label Text="{Binding Path=Current_inheritor,StringFormat='Current_inheritor: {0:S2}'}" 
                                       Style="{StaticResource SubHeadline}"
                                       FontSize="15"
                                       HorizontalOptions="Start"
                                       VerticalOptions="Center"/>

                                <Label Text="{Binding Path=Former_inheritor,StringFormat='Former_inheritor: {0:S2}'}" 
                                       Style="{StaticResource SubHeadline}"
                                       FontSize="15"
                                       HorizontalOptions="Start"
                                       VerticalOptions="Center"/>

                                <Label Text="{Binding Path=Allegiance,StringFormat='Allegiance: {0:S2}'}" 
                                       Style="{StaticResource SubHeadline}"
                                       FontSize="15"
                                       HorizontalOptions="Start"
                                       VerticalOptions="Center"/>
                                


                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
</ContentPage>