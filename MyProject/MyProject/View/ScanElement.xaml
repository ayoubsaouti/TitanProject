<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"             
             xmlns:viewmodel="clr-namespace:MyProject.ViewModel"
             xmlns:model="clr-namespace:MyProject.Model"
             x:Class="MyProject.View.ScanElement">



    <ScrollView>
        <VerticalStackLayout>

            <Button Text="Scan ton titan" 
              Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ScanElementViewModel}}, Path=AddElementCommand}"
              HorizontalOptions="Center"
              TextColor="White"
              BackgroundColor="#26223D"
              Margin="20"
              IsEnabled="{Binding IsNotBusy}"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>